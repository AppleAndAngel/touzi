<view class="page">
    <view class="page__pd text-center">
        <view class="page__pd_upload" bindtap="uploadimg"></view>
        <image class="page__pd_img" src="{{userImg}}" wx:if="{{userImg}}" />
    </view>

    <view class="page__bd">
         <view class="psge__bd_bContain page__bd-border">
            <navigator url="basemessage/basemessage" class="weui-flex page__bd_title" hover-class="bgcolor-none">
                <view class="weui-flex__item text-left">
                    <image src="../../../assets/img/icon/edit.png" mode="aspectFit" />
                    基本信息
                </view>
                <view class="weui-flex__item text-right item-paddingtop">
                     >
                </view>
            </navigator>
            <view class="page__bd_title">
                <view class="text-left">
                    <view>
                        公司全称：
                    </view>
                    <view>
                        公司简称：
                    </view>
                    <view>
                        公司官网：
                    </view>
                    <view>
                        公司地址：
                    </view>
                    <view>
                        所属行业：
                    </view>
                    <view>
                        融资阶段：
                    </view>
                    <view>
                        融资金额：
                    </view>                    
                </view>
            </view>            
        </view>

        <view class="psge__bd_bContain page__bd-border">
            <navigator url="intro/intro" class="weui-flex page__bd_title" hover-class="bgcolor-none">
                <view class="weui-flex__item text-left">
                    <image src="../../../assets/img/icon/edit.png" mode="aspectFit" />
                    企业介绍
                </view>
                <view class="weui-flex__item text-right item-paddingtop">
                     >
                </view>
            </navigator>
            <view class="page__bd_title">
                <view class="text-left">
                    <view>
                        一句话介绍：
                    </view>
                    <view>
                        项目描述：
                    </view>           
                </view>
            </view>            
        </view>

        <view class="psge__bd_bContain">
            <view class="page__bdcard_title">
                <view class="weui-flex__item text-left">
                    <image src="../../../assets/img/icon/edit.png" mode="aspectFit" />
                    上传营业执照
                </view>
                <view class="cardcontain-height text-left">                    
                    <view class="card-indent">
                        *上传名片：
                    </view>
                    <view>
                        <view class="page__bd_upload" bindtap="uploadCard"></view>
                        <image class="page__bd_img" src="{{userCard}}" wx:if="{{userCard}}" />
                    </view>           
                </view>
                <view class="text-center">点击上传名片</view>                
            </view>
            
        </view>

        <view class="psge__bd_bContain">
            <view class="page__bdcard_title">
                <view class="weui-flex__item text-left">
                    <button class="button btn-bgcolor">提交审核</button>
                </view>
            </view>            
        </view>
    </view>
</view>